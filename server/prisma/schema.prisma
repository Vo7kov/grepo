generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  SHOP
  MANAGER
}

model User {
  id    String  @id @default(cuid())
  email String  @unique
  name  String?
  role  Role    @default(USER)

  points Int @default(0)
}
